<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student List</title>
</head>

<body>
    <h1>Viewing student advisees for <%= User[0].First_Name+" "+User[0].Last_Name%>.</h1>

    <h2>Student List</h2>
    <% if (StudentList && StudentList.length> 0) { %>
        <table border=" 1">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Classification</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% StudentList.forEach(student=> { %>
                    <tr>
                        <td>
                            <%= student.First_Name %>
                        </td>
                        <td>
                            <%= student.Last_Name %>
                        </td>
                        <td>
                            <%= student.Group %>
                        </td>
                        <td>
                            <%= student.Email %>
                        </td>
                        <td>
                            <form action="/faculty/edit_student/<%= student.Person_ID %>">
                                <input type="submit" value="Edit">
                            </form>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
            </table>
            <td>
                <% }; %>
            </td>
            <button type="button">
                Clear entries
                
            </button>
</body>