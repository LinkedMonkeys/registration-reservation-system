<%
function formatDate(date) {
    var [year, month, day] = date.split('-');
    const dateObject = new Date(parseInt(year), parseInt(month) - 1, parseInt(day));
    return dateObject.toLocaleDateString('en-us', {
        weekday: "long",
        year: "numeric",
        month: "long",
        day: "numeric"
    });
}

function formatTime(time) {
    const hourString = time.substring(0, 2);
    let hour = parseInt(hourString);
    const minuteString = time.substring(2, 4);
    let amOrPm;

    if (hour == 0) {
        hour = 12;
        amOrPm = 'am';
    } else if (hour > 12) {
        hour -= 12;
        amOrPm = 'pm';
    } else {
        amOrPm = 'am';
    }

    return hour + ':' + minuteString + ' ' + amOrPm;
}
%>

<!DOCTYPE html>
<link rel="stylesheet" href="/css/style.css">
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Student Dashboard</title>
</head>
<body>

<h1>Hello, <%= name_entries[0].First_Name + " " + name_entries[0].Last_Name %>.</h1>

<% if (!time_requested) { %>
  <h2>Please register for a time from the list below:</h2>
<% } else { %>
  <h2>You are currently registered to meet with your advisor on 
      <%= formatDate(current_time[0].Date_Available) %> @ 
      <%= formatTime(current_time[0].Time) %>.
  </h2>
  <h3>If you would like to change your registered time, please select a new time from the list below:</h3>
<% } %>

<form action="/student_main/register-time" method="POST" id="registerForm">
  <input type="hidden" name="student_key" value="<%= student_key %>">

  <% time_info.forEach(slot => { %>
    <% if (slot.Student_ID == 'Available_Key') { %>
      <% const label = formatDate(slot.Date_Available) + ' @ ' + formatTime(slot.Time); %>
  
      <div class="meeting-option">
        <label>
          <input type="radio" name="selected_slot" 
                value="<%= slot.Professor_ID + '|' + slot.Date_Available + '|' + slot.Time %>">
          <%= label %>
        </label>
      </div>
  
    <% } %>
  <% }); %>
  

  <br>
  <button id="submitBtn" type="submit">Submit Selected Time</button>
</form>

<script>
document.getElementById('registerForm').addEventListener('submit', function(event) {
  const selected = document.querySelector('input[name="selected_slot"]:checked');
  if (!selected) {
    event.preventDefault();
    alert('Please select a time before submitting.');
    return;
  }

  const [advisor, date, time, group] = selected.value.split('|');
  const form = event.target;

  // Add hidden inputs for server compatibility
  const fields = { advisor, date, time, group };
  for (const key in fields) {
    const input = document.createElement('input');
    input.type = 'hidden';
    input.name = key;
    input.value = fields[key];
    form.appendChild(input);
  }

  alert(`You just registered for ${new Date(date).toDateString()} at ${time}.`);
});
</script>

<h3>If you have questions regarding your meeting time, please contact your advisor.</h3>

</body>
</html>
