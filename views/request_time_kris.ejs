<% 
// Function to format the date into a more readable format
function formatDate(date) {
    var [year, month, day] = date.split('-');
    dateObject = new Date(parseInt(year), parseInt(month)-1, parseInt(day));
    return dateObject.toLocaleDateString('en-us', { weekday:"long", year:"numeric", month:"long", day:"numeric"});
}

// Function to format military time (HHMM) into 12-hour format
function formatTime(time) {
    var hourString = time.substring(0, 2);
    var hour = parseInt(hourString);
    var minuteString = time.substring(2, 4);
    var amOrPm;

    if (hour == 0) {
        hour = 12;
        amOrPm = 'am';
    } else if (hour > 12) {
        hour -= 12;
        amOrPm = 'pm';
    } else {
        amOrPm = 'am';
    }

    return hour + ':' + minuteString + ' ' + amOrPm;
}
%>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Dashboard</title>


    <!-- NOT WORKING -->
    <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>

<h1>Registration Dashboard</h1>

<!-- Display Student Information -->
<p>Welcome, <%= Persons?.First_Name || 'Guest' %> <%= Persons?.Last_Name || '' %>.</p>
<p>Your Classification: <%= Persons?.Classification || 'Not available' %></p>
<p>Your Advisor: <%= Persons?.Advisor_Name || 'Not assigned' %></p>

<!-- Show previously requested time slot -->
<% if (date_requested && time_requested) { %>
    <p>You requested <%= formatDate(date_requested) %> @ <%= formatTime(time_requested) %>.</p>
<% } else { %>
    <p>Please select a time slot below to register.</p>
<% } %>

<!-- List of available registration slots -->
<h2>Available Registration Slots</h2>
<ul>
<% time_entries.forEach(entry => { %>
    <li>
        <!-- Form to register for a selected time slot -->
        <form action="/request_time_kris/<%= key %>/<%= entry.Date_Available %>/<%= entry.Time %>" method="POST">
            <p><%= formatDate(entry.Date_Available) %> @ <%= formatTime(entry.Time) %></p>
            <input type="hidden" name="date_requested" value="<%= entry.Date_Available %>">
            <input type="hidden" name="time_requested" value="<%= entry.Time %>">
            <button type="submit">Register</button>
        </form>
    </li>
<% }); %>
</ul>

</body>
</html>


