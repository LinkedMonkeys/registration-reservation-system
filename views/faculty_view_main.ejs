<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Faculty Dashboard</title>
</head>

<body>
    <h1>Viewing student advisees for <%= fac_info.First_Name + " " + fac_info.Last_Name %>.</h1>

    <h2>Student List</h2>
    <% if (student_info && student_info.length > 0) { %>
        <table border="1">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Classification</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% student_info.forEach(student => { %>
                    <tr>
                        <td><%= student.First_Name %></td>
                        <td><%= student.Last_Name %></td>
                        <td><%= student.Group %></td>
                        <td><%= student.Email %></td>
                        <td>
                            <form action="/faculty_main/edit_student/<%= student.Person_ID %>">
                                <input type="submit" value="Edit">
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No students found.</p>
    <% } %>

    <h2>Available Meeting Times</h2>
    <% if (availableTimes && availableTimes.length > 0) { %>
        <table border="1">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% availableTimes.forEach(time => { %>
                    <tr>
                        <td><%= time.Date_Available %></td>
                        <td><%= time.Time %></td>
                        <td>
                            <form action="/faculty_main/edit_meeting_time/<%= time.Professor_ID %>/<%= time.Date_Available %>/<%= time.Time %>">
                                <input type="submit" value="Edit">
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No available meeting times found.</p>
    <% } %>
<!-- 
  Button for adding times -->
<form action="/faculty_main/add_meeting_times_view/<%= addtime.Professor_ID %>/<%= addtime.Date_Available %>/<%= addtime.Time %>">
    <input type="submit" value="Add">
</form>

</body>

</html>
