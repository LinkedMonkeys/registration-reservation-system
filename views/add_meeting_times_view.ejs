<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Meeting Times</title>
</head>
<body>
  
  <h1>Available Meeting Times</h1>

  <% if (availableTimes && availableTimes.length > 0) { %>
  <table border="1" style="width: 100%; border-collapse: collapse;">
    <thead>
      <tr>
        <th>Date</th>
        <th>Time</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% availableTimes.forEach(time => { %>
      <tr>
        <td><%= time.Date_Available %></td>
        <td><%= time.Time %></td>
        <td>
          <a href="/edit_meeting_times.ejs"<%= time.Time %>>
            <button>Edit</button>
          </a>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <% } else { %>
  <p>No available meeting times found.</p>
  <% } %>

</body>
</html>
